{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "noEmit": true,

    // Common JS interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Source + Types
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Decorators
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,

    // Modules
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    // Output
    "pretty": true,

    // Safety
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,

    // Aliases
    "paths": {
      "@shared/*": ["./packages/shared/*", "../shared/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
