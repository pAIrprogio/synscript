{
  "reforge.defaultActionScript": "default.action-script.mts",
  "reforge.nodeRuntime": "node",
  "reforge.skipNodeModulesDebug": true,
  "reforge.envFiles": ["reforge/.env"],
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "explorer.fileNesting.patterns": {
    "*.index.ts": "${capture}.bundle.ts, ${capture}.default.ts"
  },
  // "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsc.autoDetect": "off",
  "files.exclude": { "dist": true },
  "search.exclude": { "dist": true },
  "nodejs-testing.extensions": [
    {
      "extensions": ["mjs", "cjs", "js"],
      "parameters": []
    },
    {
      "extensions": ["mts", "cts", "ts"],
      "parameters": ["--import", "tsx"]
    }
  ],
  "typescript.preferences.autoImportFileExcludePatterns": [
    "**/*.index.ts",
    "**/dist/**/*"
  ]
}
