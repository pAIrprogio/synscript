{
  "name": "@synstack/markdown",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.4.0",
  "version": "1.0.0",
  "description": "Opiniated Mardown utils",
  "keywords": [
    "markdown",
    "html"
  ],
  "author": {
    "name": "pAIrprog",
    "url": "https://pairprog.io"
  },
  "homepage": "https://github.com/pAIrprogio/synscript/tree/main/packages/markdown",
  "repository": {
    "type": "git",
    "url": "https://github.com/pAIrprogio/syn-stack.git",
    "directory": "packages/markdown"
  },
  "license": "Apache-2.0",
  "scripts": {
    "publish": "yarn npm publish --access public",
    "prepublish": "yarn test && yarn build",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test:types": "tsc --noEmit",
    "test:unit": "node --import tsx --test src/**/*.test.ts",
    "test:unit:watch": "node --import tsx --watch --test src/**/*.test.ts",
    "test": "yarn test:types && yarn test:unit"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/markdown.index.d.ts",
        "default": "./dist/markdown.index.js"
      },
      "require": {
        "types": "./dist/markdown.index.d.cts",
        "default": "./dist/markdown.index.cjs"
      }
    }
  },
  "dependencies": {
    "@synstack/yaml": "1.0.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "@types/turndown": "^5.0.5",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "zod": "*"
  },
  "files": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "dist/**/*"
  ],
  "gitHead": "c3857f4b9ec3129c478b62ddf9dbd039b5b133dd"
}
