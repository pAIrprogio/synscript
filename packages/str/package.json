{
  "name": "@syn-stack/str",
  "packageManager": "yarn@4.4.0",
  "version": "1.0.0",
  "type": "module",
  "description": "Advanced chainable string manipulation",
  "keywords": [
    "string",
    "typescript",
    "ts",
    "chaining",
    "case"
  ],
  "scripts": {
    "publish": "yarn npm publish --access public",
    "prepublish": "yarn test && yarn build",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test:types": "tsc --noEmit",
    "test:unit": "node --import tsx --test src/**/*.test.ts",
    "test:unit:watch": "node --import tsx --watch --test src/**/*.test.ts",
    "test": "yarn test:types && yarn test:unit"
  },
  "exports": {
    "import": {
      "types": "./src/str.index.ts",
      "default": "./dist/str.index.js"
    },
    "require": {
      "types": "./src/str.index.d.cts",
      "default": "./dist/str.index.cjs"
    }
  },
  "dependencies": {
    "@syn-stack/pipe": "workspace:*",
    "change-case": "^5.4.4"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "include": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "dist/**/*"
  ]
}
