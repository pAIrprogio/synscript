{
  "name": "@syn-stack/syn-script",
  "packageManager": "yarn@4.4.0",
  "type": "module",
  "version": "1.0.0",
  "author": {
    "name": "pAIrprog",
    "url": "https://pairprog.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pAIrprog/syn-stack.git",
    "directory": "packages/syn-script"
  },
  "license": "Apache-2.0",
  "scripts": {
    "publish": "yarn npm publish --access public",
    "prepublish": "yarn test && yarn build",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test:types": "tsc --noEmit",
    "test:unit": "node --import tsx --test src/**/*.test.ts",
    "test:unit:watch": "node --import tsx --watch --test src/**/*.test.ts",
    "test": "yarn test:types && yarn test:unit"
  },
  "exports": {
    "import": {
      "types": "./src/syn-script.index.ts",
      "default": "./dist/syn-script.index.js"
    },
    "require": {
      "types": "./src/syn-script.index.d.cts",
      "default": "./dist/syn-script.index.cjs"
    }
  },
  "dependencies": {
    "@syn-stack/json": "workspace:*",
    "@syn-stack/pipe": "workspace:*",
    "@syn-stack/str": "workspace:*",
    "@syn-stack/web": "workspace:*",
    "@syn-stack/xml": "workspace:*",
    "@syn-stack/yaml": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "include": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "dist/**/*"
  ]
}
