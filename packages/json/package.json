{
  "name": "@synstack/json",
  "packageManager": "yarn@4.4.0",
  "type": "module",
  "version": "1.0.0",
  "description": "Safe JSON serialization and deserialization",
  "keywords": [
    "json",
    "typescript",
    "ts",
    "serialization",
    "deserialization",
    "zod"
  ],
  "author": {
    "name": "pAIrprog",
    "url": "https://pairprog.io"
  },
  "homepage": "https://github.com/pAIrprogio/synscript/tree/main/packages/json",
  "repository": {
    "type": "git",
    "url": "https://github.com/pAIrprogio/syn-stack.git",
    "directory": "packages/json"
  },
  "license": "Apache-2.0",
  "scripts": {
    "publish": "yarn npm publish --access public",
    "prepublish": "yarn test && yarn build",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test:types": "tsc --noEmit",
    "test:unit": "node --import tsx --test src/**/*.test.ts",
    "test:unit:watch": "node --import tsx --watch --test src/**/*.test.ts",
    "test": "yarn test:types && yarn test:unit"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/json.index.d.ts",
        "default": "./dist/json.index.js"
      },
      "require": {
        "types": "./dist/json.index.d.cts",
        "default": "./dist/json.index.cjs"
      }
    }
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "zod": "^3.23.8"
  },
  "files": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "dist/**/*"
  ],
  "peerDependencies": {
    "zod": "*"
  }
}
