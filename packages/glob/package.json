    "@synstack/path": "1.0.0",
    "glob": "^11.0.0",
    "minimatch": "^10.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "files": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
