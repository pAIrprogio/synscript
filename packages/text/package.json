{
  "name": "@synstack/text",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.10",
  "description": "String templating as it was meant to be",
  "keywords": [
    "string",
    "typescript",
    "ts",
    "templating",
    "template",
    "interpolation",
    "llm",
    "prompt",
    "ai"
  ],
  "author": {
    "name": "pAIrprog",
    "url": "https://pairprog.io"
  },
  "homepage": "https://github.com/pAIrprogio/synscript/tree/main/packages/text",
  "repository": {
    "type": "git",
    "url": "https://github.com/pAIrprogio/syn-stack.git",
    "directory": "packages/text"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test:types": "tsc --noEmit",
    "test:unit": "node --experimental-strip-types --test src/**/*.test.ts",
    "test:unit:watch": "node --experimental-strip-types --watch --test --watch src/**/*.test.ts",
    "test": "yarn test:types && yarn test:unit",
    "prepare": "yarn test && yarn build"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/text.index.d.ts",
        "default": "./dist/text.index.js"
      },
      "require": {
        "types": "./dist/text.index.d.cts",
        "default": "./dist/text.index.cjs"
      }
    }
  },
  "dependencies": {
    "@synstack/json": "workspace:*",
    "@synstack/resolved": "workspace:*",
    "@synstack/str": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.9.3",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "files": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "dist/**/*"
  ],
  "gitHead": "ed339f5b4ef3a70b7371313234250b1e7445ef69"
}
