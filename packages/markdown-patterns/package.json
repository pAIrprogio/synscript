{
  "name": "@synstack/markdown-patterns",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "version": "2.0.1",
  "description": "Query-based configuration engine for markdown files",
  "keywords": [
    "pattern",
    "engine",
    "configuration",
    "query",
    "matching",
    "markdown",
    "typescript",
    "ts",
    "rules",
    "hierarchy"
  ],
  "author": {
    "name": "pAIrprog",
    "url": "https://pairprog.io"
  },
  "homepage": "https://github.com/pAIrprogio/synscript/tree/main/packages/markdown-patterns",
  "repository": {
    "type": "git",
    "url": "https://github.com/pAIrprogio/synscript.git",
    "directory": "packages/markdown-patterns"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "prepack": "pnpm build",
    "test:types": "tsc --noEmit",
    "test:unit": "node --experimental-strip-types --experimental-test-snapshots --no-warnings --test src/**/*.test.ts",
    "test:unit:watch": "node --experimental-strip-types --experimental-test-snapshots --no-warnings --watch --test --watch src/**/*.test.ts",
    "test": "pnpm test:types && pnpm test:unit"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/markdown-patterns.index.d.ts",
        "default": "./dist/markdown-patterns.index.js"
      },
      "require": {
        "types": "./dist/markdown-patterns.index.d.cts",
        "default": "./dist/markdown-patterns.index.cjs"
      }
    }
  },
  "dependencies": {
    "@synstack/fs": "workspace:^",
    "@synstack/markdown": "workspace:^",
    "@synstack/text": "workspace:^"
  },
  "devDependencies": {
    "@synstack/query": "workspace:^",
    "@types/node": "^22.15.32",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  },
  "peerDependencies": {
    "@synstack/query": "^1.0.2",
    "zod": "^3.25.67 || ^4.0.0"
  },
  "files": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "dist/**/*"
  ]
}
