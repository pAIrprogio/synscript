{
  "name": "syn-script-workspace",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "packageManager": "yarn@4.4.0",
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological-dev --interlaced --verbose run build",
    "build:watch": "yarn workspaces foreach --parallel --all --interlaced --verbose run build:watch",
    "publish": "yarn workspaces foreach --parallel --topological-dev --interlaced --no-private --verbose run publish",
    "package:sync": "./scripts/package-sync.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "zod": "^3.23.8"
  }
}
